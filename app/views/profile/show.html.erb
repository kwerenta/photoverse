<div>
  <%= image_tag @user.photo_as_thumbnail %>
  <h1 class="font-bold text-4xl"><%= @user.username %></h1>
  <h3 class="text-2xl"><%= @user.name %></h3>
  <%= render "follow_counters", user: @user %>
  <% if @user == current_user %>
    <p>Edit user</p>
  <% else %>
    <%= render "follow_button", user: @user %>
  <% end %>
  <div>
    <%= render @posts %>
  </div>
</div>
