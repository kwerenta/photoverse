<%= turbo_frame_tag follow_button_dom_id(user) do %>
  <% if current_user&.followings&.include?(user) %>
    <%= button_to "Unfollow", profile_unfollow_path(username: user.username), method: :delete %>
  <% else %>
    <%= button_to "Follow", profile_follow_path(username: user.username), method: :post %>
  <% end %>
<% end %>
