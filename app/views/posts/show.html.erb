<div class="mx-auto w-full max-w-2xl">
  <%= render @post %>
  <% if @post.user == current_user %>
    <%= link_to "Edit this post", edit_post_path(@post), class: "mt-2 btn btn-primary" %>
    <div class="inline-block ml-2 mr-2">
      <%= button_to "Destroy this post", post_path(@post), method: :delete, class: "mt-2 btn btn-secondary" %>
    </div>
  <% end %>
  <%= link_to "Back to posts", root_path, class: "btn btn-ghost" %>
  <div>
    <%= render "comments/form", post: @post, comment: @post.comments.build, submit_text: "Comment" %>
    <div class="flex flex-col gap-4 mt-4">
      <%= render @comments, {post: @post} %>
    </div>
  </div>
</div>
