<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @post %>
    <% if @post.user == current_user %>
      <%= link_to 'Edit this post', edit_post_path(@post), class: "mt-2 btn btn-primary" %>
      <div class="inline-block ml-2 mr-2">
        <%= button_to 'Destroy this post', post_path(@post), method: :delete, class: "mt-2 btn btn-secondary" %>
      </div>
    <% end %>
    <%= link_to 'Back to posts', posts_path, class: "btn btn-ghost" %>
    <div>
      <%= render 'comments/form', post: @post, comment: @post.comments.build %>
      <div class="flex flex-col gap-4 mt-4">
        <% @comments.each do |comment| %>
          <%= render "comments/comment", comment: comment %>
        <% end %>
      </div>
    </div>
  </div>
</div>
