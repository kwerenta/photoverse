<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "contents") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="my-5">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username",class:"block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",class:"block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="inline">
      <%= f.submit "Sign up", class:"rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
