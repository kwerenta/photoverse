<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Forgot your password?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "contents") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-control">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input input-accent mt-2" %>
    </div>
    <div class="mt-2">
      <%= f.submit "Reset password",class:"rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
